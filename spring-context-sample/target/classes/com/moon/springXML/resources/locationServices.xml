<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd" default-lazy-init="true">

    <!-- services -->
    <bean id="localService" class="com.moon.springXML.service.impl.LocationServiceImpl"></bean>
	
	<bean id="staticService" class="com.moon.springXML.service.impl.StaticServiceImpl" factory-method="createInstance"></bean>
    <!-- more bean definitions for services go here -->
    
    <bean id="serviceLocator" class="com.moon.springXML.service.impl.NonStaticServiceImpl">
    <!-- inject any dependencies required by this locator bean -->
	</bean>
	
    <bean id="nonStaticService" factory-bean="serviceLocator" factory-method="createInstance"></bean>

</beans>